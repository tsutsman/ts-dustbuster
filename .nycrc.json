{
  "reporter": ["text", "text-summary", "lcov"],
  "all": true,
  "extension": [".js"],
  "include": ["*.js", "src/**/*.js"],
  "exclude": [
    "test.js",
    "gui.js",
    "eslint.config.js",
    "node_modules/**",
    "public/**",
    "docs/**",
    "**/*.cmd",
    "**/*.sh"
  ],
  "check-coverage": true,
  "statements": 80,
  "branches": 80,
  "functions": 80,
  "lines": 80
}
